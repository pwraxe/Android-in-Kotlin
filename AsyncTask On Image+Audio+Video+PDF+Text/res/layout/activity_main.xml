<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#123456"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/imageActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Activity"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:background="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="20dp"
        />
    <Button
        android:id="@+id/audioActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Audio Activity"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:background="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="20dp"
        />
    <Button
        android:id="@+id/videoActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video Activity"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:background="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="20dp"
        />
    <Button
        android:id="@+id/pdfActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PDF Activity"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:background="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="20dp"
        />
    <Button
        android:id="@+id/textActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Activity"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:background="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="20dp"
        />


</LinearLayout>