<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">


       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Send Money To..."
           android:layout_gravity="center"
           android:textSize="30sp"
           android:fontFamily="serif"
           android:textColor="#000"
           android:textStyle="italic"
           android:layout_margin="20dp"
           />


       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardCornerRadius="30dp"
           android:layout_margin="10dp"
           >
           <Spinner
               android:id="@+id/sendOnBankSpinner_id"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="10dp"
               />

       </androidx.cardview.widget.CardView>
       <TextView
           android:id="@+id/selectBankError_id"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text=""
           android:layout_marginLeft="30dp"
           android:fontFamily="serif"
           android:textColor="#FF0000"
           android:textSize="15dp"
           />
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardCornerRadius="30dp"
           android:layout_margin="10dp"
           >

           <EditText
               android:id="@+id/sendOnIFSC_Code_id"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="IFSC Code Ex.SBIN0007587"
               android:padding="10dp"
               android:layout_margin="10dp"
               android:maxLength="11"
               />

       </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/IFSC_ERROR_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="30dp"
            android:fontFamily="serif"
            android:textColor="#FF0000"
            android:textSize="15dp"
            />
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardCornerRadius="30dp"
           android:layout_margin="10dp"
           >

           <EditText
               android:id="@+id/sendOnfirstAccNo_id"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Enter Account Number"
               android:padding="10dp"
               android:layout_margin="10dp"
               android:inputType="numberPassword"
               android:maxLength="12"
               />

       </androidx.cardview.widget.CardView>
       <TextView
           android:id="@+id/firstAccNo_ERROR_id"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text=""
           android:layout_marginLeft="30dp"
           android:fontFamily="serif"
           android:textColor="#FF0000"
           android:textSize="15dp"
           />
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardCornerRadius="30dp"
           android:layout_margin="10dp"
           >

           <EditText
               android:id="@+id/sendOnConfirmAccNo_id"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Confirm Account Number"
               android:padding="10dp"
               android:layout_margin="10dp"
               android:inputType="number"
               android:maxLength="12"
               />

       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardCornerRadius="30dp"
           android:layout_margin="10dp"
           >

           <EditText
               android:id="@+id/sendCustomMoney_id"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Enter Amount to be Send"
               android:padding="10dp"
               android:layout_margin="10dp"
               android:inputType="number"
               android:maxLength="12"
               />

       </androidx.cardview.widget.CardView>
       <TextView
           android:id="@+id/sendCustomMoneyError_id"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text=""
           android:layout_marginLeft="30dp"
           android:fontFamily="serif"
           android:textColor="#FF0000"
           android:textSize="15dp"
           />
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardCornerRadius="30dp"
           android:layout_margin="10dp"
           >

           <EditText
               android:id="@+id/sendOnMsg_id"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Enter Message"
               android:padding="10dp"
               android:layout_margin="10dp"
               />
       </androidx.cardview.widget.CardView>
       <TextView
           android:id="@+id/sendMoneyErrorMessage_id"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text=""
           android:layout_marginLeft="30dp"
           android:fontFamily="serif"
           android:textColor="#FF0000"
           android:textSize="15dp"
           />
       <androidx.cardview.widget.CardView
           android:id="@+id/sendOnClick_id"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:cardCornerRadius="30dp"
           android:layout_margin="10dp"
           android:layout_gravity="center"
           >

           <TextView

               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:padding="10dp"
               android:layout_margin="10dp"
               android:text="Send Money"
               android:gravity="center"
               android:textColor="#000"
               android:textSize="20dp"
               android:fontFamily="serif"
               android:textStyle="italic"
               />

       </androidx.cardview.widget.CardView>




   </LinearLayout>


</ScrollView>