<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="#123456"
    android:layout_margin="10dp"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/id_post_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id"
        android:textSize="20sp"
        android:typeface="serif"
        android:layout_margin="20dp"
        android:textColor="#fff"
        />

    <TextView
        android:id="@+id/id_post_userId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Userid"
        android:textSize="20sp"
        android:typeface="serif"
        android:layout_margin="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/id_post_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:textSize="20sp"
        android:typeface="serif"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/id_post_id"
        android:layout_marginStart="20dp"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/id_post_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="body"
        android:textSize="20sp"
        android:typeface="serif"
        android:layout_margin="20dp"
        android:layout_below="@id/id_post_title"
        android:textColor="#fff"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"
        android:layout_below="@id/id_post_body"

        />

</RelativeLayout>