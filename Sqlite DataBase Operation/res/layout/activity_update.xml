<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/id_update_user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID"
            android:textColorHint="#0040ff"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_margin="20dp"
            android:inputType="number"
            android:autofillHints="Unique ID" />

        <EditText
            android:id="@+id/id_update_user_fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:textColorHint="#0040ff"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_margin="20dp"
            android:inputType="text"
            />

        <EditText
            android:id="@+id/id_update_user_lname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:textColorHint="#0040ff"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_margin="20dp"
            android:inputType="text"
            />

        <EditText
            android:id="@+id/id_update_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email ID"
            android:textColorHint="#0040ff"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_margin="20dp"
            android:inputType="textEmailAddress"
            />

        <EditText
            android:id="@+id/id_update_user_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile No"
            android:textColorHint="#0040ff"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_margin="20dp"
            android:inputType="number"
            android:maxLength="10"
            />

        <EditText
            android:id="@+id/id_update_user_qualification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Highest Qualification"
            android:textColorHint="#0040ff"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_margin="20dp"
            android:inputType="text"
            />

        <Button
            android:id="@+id/id_update_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textStyle="bold"
            android:textSize="20dp"
            android:padding="20dp"
            android:layout_margin="20dp"
            android:background="#fff"
            />

    </LinearLayout>

</ScrollView>