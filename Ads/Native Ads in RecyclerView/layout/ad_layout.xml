<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.gms.ads.formats.UnifiedNativeAdView
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_width="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="6dp"
            app:cardMaxElevation="6dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/id_profile_pic"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ic_launcher_round"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#000"
                    android:text="AD"
                    android:textColor="#fff"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="4dp"
                    android:src="@color/colorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <TextView
                    android:id="@+id/id_headLineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="sans-serif"
                    android:text="headLine"
                    android:textColor="#000"
                    android:textSize="24sp"
                    app:layout_constraintStart_toEndOf="@+id/id_profile_pic"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/id_sponsorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="sans-serif"
                    android:text="Sponsor Name"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/id_profile_pic"
                    app:layout_constraintStart_toEndOf="@+id/id_profile_pic"
                    app:layout_constraintTop_toBottomOf="@+id/id_headLineText" />

                <ImageView
                    android:id="@+id/id_mainImage"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="#eda"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/id_profile_pic" />


                <Button
                    android:id="@+id/id_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ff000000"
                    android:text="Download"
                    android:textColor="#fff"
                    app:layout_constraintBottom_toBottomOf="@+id/id_mainImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </com.google.android.gms.ads.formats.UnifiedNativeAdView>
</layout>